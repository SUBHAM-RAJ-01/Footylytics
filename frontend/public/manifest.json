{
  "id": "com.footylytics.app",
  "name": "Footylytics - Football Analytics",
  "short_name": "Footylytics",
  "description": "Live football scores, fixtures, standings, and AI-powered predictions",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone"],
  "background_color": "#ffffff",
  "theme_color": "#2563eb",
  "orientation": "portrait-primary",
  "lang": "en",
  "dir": "ltr",
  "categories": ["sports", "entertainment", "news"],
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.footylytics.app",
      "id": "com.footylytics.app"
    }
  ],
  "icons": [
    {
      "src": "/web/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/web/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/web/icon-192-maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/web/icon-512-maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/web/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/homepg.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Home screen showing live scores and fixtures"
    },
    {
      "src": "/screenshots/fixturepg.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Fixtures page with upcoming matches"
    },
    {
      "src": "/screenshots/standings.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "League standings and tables"
    }
  ],

  "shortcuts": [
    {
      "name": "Live Scores",
      "short_name": "Scores",
      "description": "View current live football scores",
      "url": "/live"
    },
    {
      "name": "Fixtures",
      "short_name": "Fixtures",
      "description": "Check upcoming football matches",
      "url": "/fixtures"
    },
    {
      "name": "Standings",
      "short_name": "Tables",
      "description": "View league tables and standings",
      "url": "/standings"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}
